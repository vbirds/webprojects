<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>ListContactServlet</servlet-name>
        <servlet-class>com.vbirds.web.servlet.ListContactServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name> ListContactServlet </servlet-name>
        <url-pattern>/08-jsp_contact/ListContactServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>QueryContactServlet</servlet-name>
        <servlet-class>com.vbirds.web.servlet.QueryContactServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name> QueryContactServlet </servlet-name>
        <url-pattern>/08-jsp_contact/QueryContactServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateContactServlet</servlet-name>
        <servlet-class>com.vbirds.web.servlet.UpdateContactServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name> UpdateContactServlet </servlet-name>
        <url-pattern>/08-jsp_contact/UpdateContactServlet</url-pattern>
    </servlet-mapping>
</web-app>